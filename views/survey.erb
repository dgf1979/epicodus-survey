<h1 class="page-header text-center"><%= @survey.title %></h1>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">

    <h4>Rename survey:</h4>

    <form action='/surveys/<%= @survey.id %>' method='post'>
      <input type='hidden' name='_method' value='patch'>
      <div class="form-group">
        <input name='title' type='text' class="form-control">
      </div>
      <button name='submit_type' value='rename' type='submit' class="btn btn-primary">Submit</button>
    </form>

    <form action="/surveys/<%= @survey.id %>/questions" method="post">

      <h4>Add a new question:</h4>

      <div class="form-group">
        <input name="question_text" class="form-control" required autofocus>
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    </form>

    <div class="push-down">
      <h4>Questions:</h4>

      <table class="table">
      <% @questions.each() do |question| %>
        <tr>
          <td class="primary">
            <a href="/surveys/<%= @survey.id %>/questions/<%= question.id %>"><%= question.text %></a>
          </td>
          <td>
            <form action="/surveys/<%= @survey.id() %>/questions/<%= question.id %>" method='post'>
              <input type='hidden' name='_method' value='delete'>
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>
